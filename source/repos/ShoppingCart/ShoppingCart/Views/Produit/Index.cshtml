@model ShoppingCart.ViewModels.ProduitViewModel

@{
    ViewData["Title"] = "Index";
}



<div class="container p-4">
	<div class="row p-3">
		<div class="col-6">
			<h2 class="text-primary">Liste des produits</h2>
		</div>
		<div class="col-6 text-end">
			<a class="btn btn-primary"  asp-action="CreateUpdate" asp-controller="Produit">Nouveau produit</a>
		</div>
	</div>
</div>

<table id="myTable" class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Nom Produit</th>
            <th>Description</th>
            <th>Prix</th>
            <th>Action</th>



        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Produits){
            <tr>
                <td>@item.Nom</td>
                <td>@item.Description</td>
                <td>@item.Prix</td>

                <td role="group">
                    <a asp-action="CreateUpdate" asp-controller="Produit" asp-route-id="@item.Id">Edit</a>
                    <a asp-action="Delete" asp-controller="Produit" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts{
	<script src="~/js.Produit.js"></script>
}