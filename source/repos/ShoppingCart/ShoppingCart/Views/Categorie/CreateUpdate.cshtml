@model ShoppingCart.ViewModels.CategorieViewModel

<form method="post" asp-action="CreateUpdate" enctype="multipart/form-data">
	<input type="hidden" asp-for="Categorie.Id" />

	<div class="border-bottom p-3 mt-4">
		<div class="row pb-3">
			<h2 class="text-primary">
				@((Model.Categorie == null || Model.Categorie.Id == 0) ? "Create" : "Update") Categorie
			</h2>
			<hr />
		</div>
		<div asp-validation-summary=All></div>

		<div class="row mb-3">
			<label asp-for="Categorie.Nom"></label>
			<input asp-for="Categorie.Nom" class="form-control" />
			<span asp-validation-for="Categorie.Nom" class="text-danger"></span>
		</div>

		<div class="row mb-3">
			<label asp-for="Categorie.DisplayOrder"></label>
			<input asp-for="Categorie.DisplayOrder" class="form-control" />
			<span asp-validation-for="Categorie.DisplayOrder" class="text-danger"></span>
		</div>

	@*	<div class="row mb-3">
			<label asp-for="Categorie.CreateDateTime"></label>
			<input asp-for="Categorie.CreateDateTime" class="form-control" />
			<span asp-validation-for="Categorie.CreateDateTime" class="text-danger"></span>
		</div>*@



		@if(Model.Categorie == null || Model.Categorie.Id == 0)
		{
			<button class="btn btn-primary" type="submit">Create</button>
		}
		else
		{
			<button class="btn btn-primary" type="submit">Update</button>
		}

	</div>

	<a asp-action="Index" asp-controller="Categorie">Retour à la liste</a>
</form>

@section scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}

